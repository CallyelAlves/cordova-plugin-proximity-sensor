<?xml version="1.0" encoding="UTF-8"?>
<plugin id="cordova-plugin-proximity-sensor" version="1.0.0"
        xmlns="http://apache.org/cordova/ns/plugins/1.0"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <name>ProximitySensor</name>
    <description>Reads proximity sensor data</description>
    <license>MIT</license>
    <keywords>cordova, proximity, sensor</keywords>

    <js-module src="www/proximity.js" name="ProximitySensor">
        <clobbers target="ProximitySensor" />
    </js-module>

    <platform name="android">
        <config-file target="config.xml" parent="/*">
            <feature name="ProximitySensor">
                <param name="android-package" value="com.example.proximitysensor.ProximitySensor"/>
            </feature>
        </config-file>

        <source-file src="src/android/ProximitySensor.java" target-dir="src/com/example/proximitysensor" />
    </platform>
</plugin>
